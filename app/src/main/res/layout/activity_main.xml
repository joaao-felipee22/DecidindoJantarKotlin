<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:background="@color/colorAccent">

    <TextView
            android:id="@+id/select_food"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hamburguer"
            android:textColor="@color/colorPrimaryDark"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:fontFamily="@font/muli_bold" android:textSize="30dp" android:layout_marginBottom="344dp"
            app:layout_constraintHorizontal_bias="0.541"/>
    <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp" app:srcCompat="@drawable/talher"
            android:id="@+id/icon_food" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/select_food" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
    <Button
            android:text="Escolher"
            android:layout_width="223dp"
            android:layout_height="56dp"
            android:id="@+id/decide_food"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintBottom_toBottomOf="parent"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:background="@color/colorAmarela" android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:textAllCaps="false" android:textSize="15sp"
            android:fontFamily="@font/baloo_tamma" android:textColor="@android:color/black"
            android:textAlignment="center"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/name_food" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/add_food" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/select_food" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:hint="Digite uma comida"
            android:fontFamily="@font/muli_bold" android:importantForAutofill="no"/>
    <Button
            android:text="Adicionar Comida"
            android:layout_width="249dp"
            android:layout_height="wrap_content"
            android:id="@+id/add_food" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginBottom="148dp"
            app:layout_constraintBottom_toTopOf="@+id/decide_food"
            android:textSize="15sp" android:background="@color/colorAmarela"
            android:fontFamily="@font/baloo_tamma"/>

</android.support.constraint.ConstraintLayout>